# Backend - Sistema Courier SaaS
# Copiar a .env y completar con valores reales

# Base de datos MySQL (usar servicio externo como PlanetScale, Railway, etc)
DB_HOST=your-mysql-host.com
DB_PORT=3306
DB_USER=your_user
DB_PASSWORD=your_password
DB_NAME=sistema_courier_saas

# Servidor
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://your-frontend.vercel.app

# Firebase Admin
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
# Para Render: crear variable de entorno con el contenido del JSON
GOOGLE_APPLICATION_CREDENTIALS=./firebase-service-account.json

# Stripe (OPCIONAL)
STRIPE_ENABLED=false
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# SendGrid
SENDGRID_API_KEY=SG.xxxxx
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_TEMPLATE_WELCOME=d-xxxxx
SENDGRID_TEMPLATE_PASSWORD_RESET=d-xxxxx
SENDGRID_TEMPLATE_PACKAGE=d-xxxxx
SENDGRID_TEMPLATE_INVOICE=d-xxxxx
SENDGRID_TEMPLATE_TRIAL=d-xxxxx

# SINPE MÃ³vil
SINPE_PHONE_NUMBER=0000-0000
SINPE_BANK_NAME=Tu Banco
SINPE_HOLDER_NAME=Tu Nombre

# PayPal (OPCIONAL)
PAYPAL_ENABLED=false
PAYPAL_CLIENT_ID=your_client_id
PAYPAL_CLIENT_SECRET=your_client_secret
PAYPAL_MODE=sandbox
